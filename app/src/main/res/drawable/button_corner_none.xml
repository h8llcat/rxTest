<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_checked="false" android:bottom="1dp" android:left="1dp" >
        <shape
            android:shape="rectangle">
            <solid android:color="@color/md_grey_200" />

        </shape>
    </item>

    <item android:state_checked="true" android:bottom="1dp" android:left="1dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/md_light_blue_700" />
        </shape>
    </item>

</selector>