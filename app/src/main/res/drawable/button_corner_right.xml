<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false" android:bottom="1dp" android:left="1dp" >
        <shape
            android:shape="rectangle">
            <!--<stroke android:width="1dp" android:color="#FF000000" />-->
            <solid android:color="@color/md_grey_200" />
            <corners
                android:bottomRightRadius="20dp"
                android:topRightRadius="20dp"
                />
        </shape>
    </item>

    <item android:state_checked="true" android:bottom="1dp" android:left="1dp">
        <shape
            android:shape="rectangle">
            <!--<stroke android:width="1dp" android:color="#FF000000" />-->
            <solid android:color="@color/md_blue_A400" />
            <corners
                android:bottomRightRadius="20dp"
                android:topRightRadius="20dp"
                />
        </shape>
    </item>


</selector>