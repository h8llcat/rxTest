
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="sapotero.rxtest.views.fragments.DecisionPreviewFragment"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/half_date_offset"
        android:layout_marginEnd="22sp"
        android:weightSum="8"
        android:padding="@dimen/date_offset"
        >
        <!--android:background="@drawable/card_border_white"-->
        <!--android:layout_marginBottom="@dimen/date_offset"-->

        <TextView
            android:text="Бланк резолюции"
            android:textStyle="bold"
            android:gravity="center|center_vertical|top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/decision_preview_head"
            android:layout_weight="1"
            />
        <View
            android:gravity="center|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/md_grey_100"
            android:layout_margin="@dimen/date_offset"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="450dp"
            android:layout_weight="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/decision_preview_body"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/decision_preview_sign_text"
            android:layout_weight="1"

            />

    </LinearLayout>