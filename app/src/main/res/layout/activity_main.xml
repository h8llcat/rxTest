                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <sapotero.rxtest.views.views.MultiOrganizationSpinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/half_date_offset"
                        android:id="@+id/ORGANIZATION"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"/>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/JOURNAL_TYPE"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"/>
                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/documentsRecycleView"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/myImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/gerb_big"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:alpha="0.1"


                    />
                <TextView android:id="@+id/documents_empty_list"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:textSize="24dp"

                          android:layout_alignLeft="@+id/myImageView"
                          android:layout_alignTop="@+id/myImageView"
                          android:layout_alignRight="@+id/myImageView"
                          android:layout_alignBottom="@+id/myImageView"
                          android:layout_margin="1dp"
