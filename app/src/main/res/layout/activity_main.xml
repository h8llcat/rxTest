<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_wrapper"
    android:clipToPadding="false"
    tools:context=".views.activities.MainActivity"
    android:gravity="center"
    android:background="@color/it_mvd_background">



    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"



        android:paddingTop="@dimen/half_date_offset"
        android:transitionName="actionBar"
        android:minHeight="?attr/actionBarSize"
        android:background="@drawable/toolbar_background"

        android:elevation="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">


        <!--<ImageView-->
            <!--android:id="@+id/myImageView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:src="@drawable/gerb_big"-->
            <!--android:scaleX="0.8"-->
            <!--android:scaleY="0.8"-->
            <!--android:alpha="0.05"-->
            <!--/>-->

        <TextView android:id="@+id/documents_empty_list"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:textSize="@dimen/date_offset"
                  android:layout_margin="1dp"
                  android:gravity="center"
                  android:textColor="@color/md_grey_600"
                  android:text="@string/empty_list"
        />

        <ProgressBar
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:indeterminate="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <!--android:gravity="center_vertical"-->
        <!--android:paddingTop="@dimen/half_date_offset"-->

        <LinearLayout
            android:id="@+id/activity_main_menu"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/date_offset"
            android:paddingRight="@dimen/date_offset"
            android:layout_marginTop="@dimen/date_offset"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            >
            <!--android:background="@color/md_grey_200"-->
            <!--&lt;!&ndash;android:elevation="4dp"&ndash;&gt;-->

            <Spinner
                android:layout_height="match_parent"
                android:id="@+id/DOCUMENT_TYPE"
                android:padding="1dp"
                android:background="@drawable/spinner_document_type"
                android:layout_width="350dp"
                android:minWidth="300dp"/>
            <!--android:layout_gravity="center_horizontal"-->

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/activity_main_menu_builder_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/activity_main_menu_builder_organization"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="1">

                    <sapotero.rxtest.views.views.MultiOrganizationSpinner
                        android:layout_height="match_parent"
                        android:id="@+id/ORGANIZATION"
                        android:minWidth="300dp"
                        android:background="@drawable/spinner_journal_background"
                        android:padding="15dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <CheckBox
                        android:id="@+id/favorites_button"
                        android:button="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text = "@string/favorites_template"
                        android:background="@drawable/button_corner_all"
                        android:textColor="@color/text_selector"
                        />


                    <!--<Spinner-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:id="@+id/JOURNAL_TYPE"-->
                        <!--android:background="@drawable/spinner_journal_background"-->
                        <!--android:padding="3dp"-->
                        <!--/>-->

                </LinearLayout>
            </LinearLayout>

            <!--android:layout_gravity="center_horizontal"-->

            <!--android:layout_margin="2dp"-->


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:weightSum="10">

            <sapotero.rxtest.views.views.CircleLeftArrow
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:id="@+id/activity_main_left_button"
                android:layout_weight="1"
                android:padding="4dp"
                android:layout_marginTop="224dp"
                android:layout_marginStart="@dimen/half_date_offset"
                android:layout_marginEnd="@dimen/half_date_offset"
                />

            <android.support.v7.widget.RecyclerView

            android:id="@+id/documentsRecycleView"
            android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_weight="8"
                />

            <sapotero.rxtest.views.views.CircleRightArrow
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:id="@+id/activity_main_right_button"
                android:layout_weight="1"
                android:layout_marginTop="224dp"
                android:layout_marginStart="@dimen/half_date_offset"
                android:layout_marginEnd="@dimen/half_date_offset"
                />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
