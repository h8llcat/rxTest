<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/file_sign_layout_cv"
    app:cardElevation="2dp"
    app:cardCornerRadius="0dp"
    android:layout_width="match_parent"
    android:layout_height="440dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:padding="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/file_sign_filename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingTop="24dp"
            android:paddingStart="@dimen/date_offset"
            android:paddingEnd="@dimen/date_offset"

            android:textColor="@color/md_grey_900"
            android:fontFamily="sans-serif"

            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="start"
            android:ellipsize="end"
            android:lines="1"

            android:text="FileName.pfd"
            />

        <TextView
            android:id="@+id/file_sign_uids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingTop="12dp"
            android:paddingBottom="@dimen/date_offset"
            android:paddingStart="@dimen/date_offset"
            android:paddingEnd="@dimen/date_offset"

            android:textColor="@color/md_grey_600"
            android:fontFamily="sans-serif"

            android:textStyle="normal"
            android:textSize="14sp"
            android:gravity="start"

            android:ellipsize="middle"
            />
        <TextView
            android:id="@+id/file_sign_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/date_offset"
            android:paddingStart="@dimen/date_offset"
            android:paddingEnd="@dimen/date_offset"

            android:textColor="@color/md_grey_800"
            android:fontFamily="monospace"

            android:textStyle="normal"
            android:textSize="8sp"


            android:text="@string/sign"
            />
        <Button
            android:id="@+id/file_sign_button_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Копировать"
            android:layout_marginEnd="@dimen/half_date_offset"
            android:layout_marginBottom="@dimen/half_date_offset"
            android:layout_gravity="end"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>
</android.support.v7.widget.CardView>