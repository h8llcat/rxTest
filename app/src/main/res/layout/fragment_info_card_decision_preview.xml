<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/half_date_offset"
        app:cardElevation="2dp"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <!--<TextView-->
            <!--android:id="@+id/textView4"-->
            <!--android:text="@string/decision"-->
            <!--android:gravity="center"-->
            <!--android:textStyle="bold"-->
            <!--android:textSize="13sp"-->
            <!--android:textColor="@color/md_grey_900"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_alignParentStart="true"-->
            <!--/>-->

            <LinearLayout
                android:id="@+id/desigion_view_root"
                android:background="@drawable/corner_background"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="620dp"
                android:padding="@dimen/date_offset"
                android:layout_below="@+id/textView4">


                <!--<android.support.v7.widget.RecyclerView-->
                <!--android:id="@+id/desigions_recycler_view"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="@dimen/date_offset"-->
                <!--android:background="@drawable/selector_row"-->
                <!--/>-->

                <LinearLayout
                    android:id="@+id/activity_info_decision_preview_head"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <!--android:layout_height="64dp"-->

                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="472dp"
                    android:fillViewport="true">

                    <LinearLayout
                        android:id="@+id/activity_info_decision_preview_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </ScrollView>

                <LinearLayout
                    android:id="@+id/activity_info_decision_preview_bottom"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="64dp">
                </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:id="@+id/activity_info_button_magnifer"
                android:background="@drawable/magnifer"
                android:layout_height="24dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="24dp"
                android:foreground="@drawable/card_foreground"
                android:layout_marginTop="52dp"
                android:visibility="gone"
                android:layout_marginStart="@dimen/date_offset"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/edit"
                android:visibility="gone"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>

            <ImageButton
                android:id="@+id/activity_info_button_edit"
                android:background="@drawable/edit_pencil"
                android:layout_height="24dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="24dp"
                android:foreground="@drawable/card_foreground"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="52dp"
                android:visibility="gone"
                android:layout_alignParentEnd="true"/>

    </RelativeLayout>



    <!--android:background="@drawable/spinner_journal_background"-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_100"
        android:padding="@dimen/half_date_offset"
        android:layout_above="@+id/activity_info_decision_spinner"
        android:layout_marginBottom="56dp"
        android:layout_gravity="bottom"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:id="@+id/activity_info_decision_spinner"
        android:padding="@dimen/half_date_offset"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        />

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_info_decision_preview_toolbar"
        android:layout_width="match_parent"
        app:theme="@style/ToolbarColoredBackArrow"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_height="?attr/actionBarSize" />


</android.support.v7.widget.CardView>