<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    android:padding="24dp"
    android:background="@drawable/card_border_white"
    >

    <TextView
        android:text="Укажите причину отклонения документа"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:lines="10"
        android:hint="Причина отклонения"
        android:layout_below="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:id="@+id/editText"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/dialog_reject_decision_button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/dialog_oshs_cancel">
        </Button>
        <Button
            android:id="@+id/dialog_reject_decision_button_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/reject_decision">
        </Button>
    </LinearLayout>


</LinearLayout>