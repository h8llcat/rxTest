<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/log_layout_cv"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="0dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/log_operation_id"
            android:layout_width="196dp"
            android:padding="@dimen/date_offset"
            android:layout_height="match_parent"
            android:textColor="@color/md_grey_600"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/log_operation_date"
            android:layout_width="128dp"
            android:padding="@dimen/date_offset"
            android:layout_height="match_parent"
            android:textColor="@color/md_grey_600"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            />

        <TextView
            android:id="@+id/log_operation_name"
            android:layout_width="800dp"
            android:padding="@dimen/date_offset"
            android:layout_height="match_parent"
            android:textColor="@color/md_grey_800"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            />
        <CheckBox
            android:id="@+id/log_executed_local"
            android:layout_width="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <CheckBox
            android:id="@+id/log_executed_remote"
            android:layout_width="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>