<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_document_image_full_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sapotero.rxtest.views.activities.DocumentImageFullScreenActivity"
    android:orientation="vertical"
    android:background="@color/md_white_1000">

    <android.support.v7.widget.Toolbar
        android:id="@+id/document_image_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:paddingTop="@dimen/half_date_offset"
        android:minHeight="?attr/actionBarSize"
        android:transitionName="actionBar"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:theme="@style/ToolbarColoredBackArrow"

        android:background="@drawable/toolbar_background"
        android:theme="@style/AlertDialog.AppCompat.Light"/>

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/document_image_fullscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/document_image_toolbar"/>

    <FrameLayout
        android:background="@drawable/pdf_fullscreen"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="48dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:padding="@dimen/half_date_offset"
                android:layout_gravity="center_vertical"
                android:layout_width="160dp"
                android:layout_marginStart="@dimen/date_offset">

                <sapotero.rxtest.views.views.CircleLeftArrow
                    android:id="@+id/pdf_fullscreen_prev_document"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/half_date_offset"
                    android:layout_marginEnd="@dimen/half_date_offset"
                    android:layout_height="30dp"/>


                <TextView
                    android:text="1 из 2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/pdf_fullscreen_document_counter"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <sapotero.rxtest.views.views.CircleRightArrow
                    android:id="@+id/pdf_fullscreen_next_document"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/half_date_offset"
                    android:layout_marginEnd="@dimen/half_date_offset"
                    android:layout_height="30dp"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">
                <TextView
                    android:text="1 из 2 страниц"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/pdf_fullscreen_page_counter"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </FrameLayout>
        </LinearLayout>
    </FrameLayout>


</RelativeLayout>
