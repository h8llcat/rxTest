<RelativeLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="sapotero.rxtest.views.custom.SearchView.SearchView">

    <android.support.v7.widget.CardView
        android:id="@+id/search_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/searchview_side_margins"
        android:layout_marginRight="@dimen/searchview_side_margins"
        android:layout_marginTop="@dimen/searchview_side_margins"
        android:background="@color/searchview_background"
        android:visibility="invisible"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/search_region"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/searchview_height_region_search">

                <ImageButton
                    android:id="@+id/ibtn_navigation_back"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="@string/searchview_image_back"
                    android:paddingLeft="@dimen/searchview_padding_horizontal_button_action"
                    android:paddingRight="@dimen/searchview_padding_horizontal_button_action"
                    android:scaleType="fitCenter"
                    android:src="@drawable/arrow_back"/>

                <sapotero.rxtest.views.custom.SearchView.SearchEditText
                    android:id="@+id/et_search_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="@string/searchview_text_hint"
                    android:imeOptions="flagNoExtractUi|actionSearch"
                    android:inputType="textAutoComplete|textAutoCorrect"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/searchview_text_query"
                    android:textColorHighlight="@color/searchview_text_highlight"
                    android:textCursorDrawable="@drawable/search_text_cursor"
                    card_view:typeface="roboto_regular"
                    android:layout_toEndOf="@+id/ibtn_navigation_back"/>

                <sapotero.rxtest.views.custom.MultiSpinner
                    android:id="@+id/search_spinner"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/ibtn_voice_close"/>

                <ImageButton
                    android:id="@+id/ibtn_voice_close"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="@string/searchview_voice_cancel"
                    android:paddingLeft="@dimen/searchview_padding_horizontal_button_action"
                    android:paddingRight="@dimen/searchview_padding_horizontal_button_action"
                    android:scaleType="fitCenter"
                    android:src="@drawable/voice"/>

            </RelativeLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/suggestions_region"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <View
                        android:id="@+id/search_divider"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/searchview_height_divider"
                        android:background="@color/searchview_divider"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/suggestion_list"
                        android:layout_width="match_parent"
                        android:scrollbars="vertical"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
