<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_decision_constructor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sapotero.rxtest.views.activities.DecisionConstructorActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="@dimen/half_date_offset"
        android:transitionName="actionBar"
        android:minHeight="?attr/actionBarSize"
        android:background="@drawable/toolbar_background"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:theme="@style/ToolbarColoredBackArrow"
        android:theme="@style/AlertDialog.AppCompat.Light"
        android:elevation="8dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:padding="@dimen/date_offset"
        android:weightSum="3"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                style="@android:style/Widget.Material.Light.ScrollView"
                android:fillViewport="false"

                >

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/decision_constructor_decision_preview"
                    >
                </RelativeLayout>
            </ScrollView>
        </LinearLayout>

        <Space
            android:layout_width="@dimen/date_offset"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/card_border_white"
            >


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/date_offset"
                >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:longClickable="false"
                        android:gravity="start|center_vertical"
                        >

                        <sapotero.rxtest.views.views.SpinnerWithLabel
                            android:id="@+id/urgency_selector"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/hint_urgency" />
                    </android.support.design.widget.TextInputLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:longClickable="false"
                        android:layout_gravity="end|center_vertical"
                        >

                        <sapotero.rxtest.views.views.SpinnerWithLabel
                            android:id="@+id/head_font_selector"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_head_font_size" />
                    </android.support.design.widget.TextInputLayout>
                </FrameLayout>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"

                android:layout_height="500dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                     <!--main view. -->
                    <LinearLayout
                        android:id="@+id/decisions_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/date_offset"
                        android:paddingEnd="@dimen/date_offset"
                        >
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <!--android:paddingStart="@dimen/date_offset"-->
                <!--android:paddingEnd="@dimen/date_offset"-->
                <!--android:paddingBottom="@dimen/half_date_offset"-->


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    >

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/to_text_input_layout"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:layout_width="match_parent">

                        <sapotero.rxtest.views.views.DelayAutoCompleteTextView
                            android:layout_gravity="bottom"
                            android:gravity="bottom"
                            android:id="@+id/fragment_decision_autocomplete_field"
                            android:inputType="textCapSentences"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/date_offset"
                            android:hint="Подписал"
                            android:imeOptions="flagNoExtractUi|actionSearch"/>
                    </android.support.design.widget.TextInputLayout>
                    <ProgressBar
                        android:id="@+id/fragment_decision_autocomplete_field_loading_indicator"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="32dp"
                        android:visibility="invisible"
                        android:layout_gravity="center|end"
                        android:gravity="center|end"
                        android:foregroundGravity="center|right"/>

                </FrameLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
