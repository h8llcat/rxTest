<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginStart="@dimen/half_date_offset"
        android:layout_marginEnd="@dimen/date_offset"
        android:layout_marginTop="@dimen/date_offset"
        android:layout_marginBottom="@dimen/date_offset"

        android:elevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="1dp"
        android:layout_weight="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="8sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/md_grey_800"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textSize="24sp"
            android:text="Шаблоны отклонения"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_rejection_decision_template_list"
            android:name="sapotero.rxtest.views.fragments.DecisionRejectionTemplateFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layoutManager="LinearLayoutManager"
            tools:context="sapotero.rxtest.views.fragments.DecisionRejectionTemplateFragment"
            tools:listitem="@layout/fragment_decision_rejection_template_item"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
