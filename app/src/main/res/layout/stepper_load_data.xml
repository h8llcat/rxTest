<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        >

        <ProgressBar
            android:id="@+id/stepper_loader_user_progressbar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />

        <CheckBox
            android:id="@+id/stepper_loader_user"
            android:text="@string/stepper_loader_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        >

        <ProgressBar
            android:id="@+id/stepper_loader_list_progressbar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />

        <CheckBox
            android:id="@+id/stepper_loader_list"
            android:text="@string/stepper_loader_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        >

        <ProgressBar
            android:id="@+id/stepper_loader_info_progressbar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />

        <CheckBox
            android:id="@+id/stepper_loader_info"
            android:text="@string/stepper_loader_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            />
    </TableRow>

</TableLayout>
