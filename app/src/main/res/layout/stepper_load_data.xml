<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <LinearLayout
        android:id="@+id/load_wrapper"
        android:alpha="1.0"
        android:background="@color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">



        <com.daimajia.numberprogressbar.NumberProgressBar
            android:id="@+id/number_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <CheckBox
            android:id="@+id/stepper_loader_user"
            android:text="@string/stepper_loader_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            />

        <CheckBox
            android:id="@+id/stepper_loader_list"
            android:text="@string/stepper_loader_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            />

        <CheckBox
            android:id="@+id/stepper_loader_info"
            android:text="@string/stepper_loader_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            />

    </LinearLayout>



</RelativeLayout>