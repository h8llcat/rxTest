<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="sapotero.rxtest.views.fragments.DecisionTemplateFragment"

    android:layout_marginStart="@dimen/date_offset"
    android:layout_marginEnd="@dimen/half_date_offset"
    android:layout_marginTop="@dimen/date_offset"
    android:layout_marginBottom="@dimen/date_offset"

    android:elevation="1dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="1dp"
    android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/fragment_decision_template_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_decision_template_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            tools:context="sapotero.rxtest.views.fragments.DecisionTemplateFragment"
            tools:listitem="@layout/fragment_decision_template_item"/>
    </LinearLayout>


</android.support.v7.widget.CardView>

