<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sapotero.rxtest.views.activities.InfoActivity">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loader"
        android:indeterminate="true"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/loader"
        >


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="346dp"
            android:layout_height="match_parent"
            android:weightSum="3">


            <LinearLayout
                android:id="@+id/desigion_view_root"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/half_date_offset"
                android:background="@color/cardview_light_background"
                android:layout_height="360dp"
                android:layout_weight="1.29">
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:id="@+id/desigion_view"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:padding="@dimen/date_offset"
                        android:minHeight="350dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/half_date_offset"
                        android:background="@drawable/corner_background"
                        >

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/desigions_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_weight="2.89"/>

        </LinearLayout>

        <Space
            android:layout_width="5dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:weightSum="1">

            <android.support.design.widget.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tabs"
                >

            </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/tab_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
