<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory
        android:title="Настройки отображения">

        <ListPreference
            android:key="settings_view_start_page"
            android:title="Стартовая страница"
            android:summary="Выберете страницу, которая будет отображаться по умолчанию"
            android:defaultValue=""
            android:entries="@array/settings_view_start_page"
            android:entryValues="@array/settings_view_start_page_values" />

        <MultiSelectListPreference
            android:key="settings_view_journals"
            android:title="Журналы"
            android:summary="Выберете журналы, отображаемые в приложении"
            android:defaultValue="@array/empty_array"
            android:entries="@array/settings_view_start_page"
            android:entryValues="@array/settings_view_start_page_values" />
        <CheckBoxPreference
            android:key="settings_view_hide_first"
            android:title="Не отображать статус «Первичное рассмотрение»"
            android:defaultValue="false" />
        <CheckBoxPreference
            android:key="settings_view_type_show_without_project"
            android:title="Отображать документы без проекта резолюции"
            android:defaultValue="false" />
        <CheckBoxPreference
            android:key="settings_view_hide_buttons"
            android:title="Не отображать «Прошу доложить» и «Прошу ознакомить»"
            android:defaultValue="false" />
        <CheckBoxPreference
            android:key="settings_view_show_urgency"
            android:title="Отображать настройки срочности"
            android:defaultValue="false" />
        <CheckBoxPreference
            android:key="settings_view_only_urgent"
            android:title="C одним типом «Срочно»"
            android:defaultValue="false" />
        <CheckBoxPreference
            android:key="settings_view_show_origin"
            android:title="Отображать настройки подлинника"
            android:defaultValue="false" />
        <!--<EditTextPreference-->
            <!--android:key="settings_view_time"-->
            <!--android:position="Время показа уведомления"-->
            <!--android:defaultValue="0" />-->

    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>