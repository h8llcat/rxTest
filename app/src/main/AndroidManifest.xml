<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="sapotero.rxtest">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name=".application.EsdApplication"
        android:allowBackup="true"
        android:icon="@drawable/gerb"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Launcher">
        <activity
            android:name=".views.activities.LoginActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.MainActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".views.activities.InfoActivity"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.activities.MainActivity"/>
        </activity>
        <activity
            android:name=".views.activities.InfoNoMenuActivity"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.activities.InfoNoMenuActivity"/>
        </activity>

        <service
            android:name=".views.services.MainService"
            android:enabled="true"
            android:exported="true">
        </service>

        <activity android:name=".views.activities.SettingsActivity">
        </activity>
        <activity android:name=".views.activities.DecisionConstructorActivity">
        </activity>
        <activity android:name=".views.activities.DocumentImageFullScreenActivity">
        </activity>
        <activity android:name=".views.activities.DocumentInfocardFullScreenActivity">
        </activity>
        <activity android:name=".views.activities.SettingsTemplatesActivity">
        </activity>

        <provider
            android:name=".utils.DBSearchFinder"
            android:authorities="DBSearchFinder"
            android:enabled="true"
            android:exported="true">
        </provider>
    </application>

</manifest>